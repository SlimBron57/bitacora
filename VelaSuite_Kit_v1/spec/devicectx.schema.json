{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DeviceCtx",
  "type": "object",
  "required": [
    "did",
    "wrap_dek",
    "attestation"
  ],
  "properties": {
    "did": {
      "type": "string",
      "description": "Device DID (KeelID)"
    },
    "wrap_dek": {
      "type": "string",
      "description": "Base64 of KEK-wrapped DEK"
    },
    "attestation": {
      "type": "object",
      "description": "Platform-specific attestation document"
    }
  },
  "additionalProperties": true
}