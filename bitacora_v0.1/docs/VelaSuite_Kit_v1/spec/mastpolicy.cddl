; CDDL for MastPolicy (COSE_Sign1 payload)
MastPolicy = {
  iss: tstr,                ; "bitacora"
  sub: tstr,                ; device DID (KeelID)
  exp: uint,
  features: [* tstr],       ; e.g., "VELA.MAIN"
  min_template_versions: {* tstr => uint},
  allowed_hashes: [* bstr], ; SHA-256
  offline_grace_s: uint,
  app_version: tstr,        ; semver constraint
  attestation_required: bool,
  ? audio_challenge: {
    enabled: bool,
    sr: uint,
    dur_ms: uint,
    window: tstr,
    bins: uint
  }
}